{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "allowJs": false
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}